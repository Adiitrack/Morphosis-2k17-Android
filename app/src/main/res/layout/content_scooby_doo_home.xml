<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nitmz.morphosis.scoobydoo.ScoobyDooHomeActivity"
    tools:showIn="@layout/app_bar_scooby_doo_home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_view_scooby_home"
        android:visibility="gone" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/scooby_home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/frag_view_scooby_home"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp" />

        <ImageView
            android:id="@+id/question_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@android:color/background_dark"
            android:layout_weight=".90"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/answer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/answer_field_hint"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_weight=".70"/>

        <Button
            android:id="@+id/answer_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="send" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>