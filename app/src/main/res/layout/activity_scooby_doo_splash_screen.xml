<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/scooby_splash_screen"
    tools:context="com.nitmz.morphosis.scoobydoo.ScoobyDooSplashScreenActivity">

    <ImageView
        android:id="@+id/scooby_logo_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:paddingTop="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_scooby" />

    <TextView
        android:id="@+id/scooby_title_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scooby_logo_splash_screen"
        android:layout_marginTop="24dp"
        android:text="Scooby Dooby Doo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/scooby_sub_title_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scooby_title_splash_screen"
        android:layout_marginTop="10dp"
        android:text="Find the clue!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

</RelativeLayout>
