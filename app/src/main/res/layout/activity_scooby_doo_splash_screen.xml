<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitmz.morphosis.scoobydoo.ScoobyDooSplashScreenActivity">

    <ImageView
        android:id="@+id/scooby_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo_morphosis"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="6dp"
        android:layout_above="@+id/view_sccooby_splash"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view_sccooby_splash"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scooby_name"
        android:layout_margin="5dp"

        android:layout_below="@+id/view_sccooby_splash"
        android:text="Morphosis 2k17"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scooby_name"
        android:layout_margin="5dp"
        android:text="The Annual Technical Fest of NIT Mizoram"
        android:textAlignment="center"
        android:textSize="14sp" />

</RelativeLayout>
