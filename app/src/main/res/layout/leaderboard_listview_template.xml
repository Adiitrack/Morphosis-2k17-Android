<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:id="@+id/leaderboard_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF303030"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <com.nitmz.morphosis.scoobydoo.CircleImageView
                    android:id="@+id/leaderboard_user_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/ic_account_circle_white_48dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".80">

                    <TextView
                        android:id="@+id/leaderboard_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:text="User Name"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/leaderboard_user_score"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/leaderboard_user_name"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="20dp"
                        android:text="Score"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>