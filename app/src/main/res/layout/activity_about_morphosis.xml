<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitmz.morphosis.techfest.AboutMorphosisActivity">


    <ImageView
        android:id="@+id/about_morphosis_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo_morphosis" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_morphosis_logo"
        android:layout_marginStart="12dp"
        android:text="@string/morphosis_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:id="@+id/about_title" />

    <TextView
        android:id="@+id/about_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_title"
        android:layout_marginTop="11dp"
        android:text="@string/morphosis_sub_title"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/about_morphosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_sub_title"
        android:layout_marginTop="22dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="20sp" />



</RelativeLayout>
