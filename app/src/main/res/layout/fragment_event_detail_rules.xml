<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitmz.morphosis.techfest.EventDetailRulesFragment">

    <RelativeLayout
        android:id="@+id/no_rules_event_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No specific rules! You're free to play!"
            android:textAlignment="center"
            android:textSize="36sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/event_detail_rules_web_view_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <WebView
                android:id="@+id/event_detail_rules_web_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <WebView
                android:id="@+id/event_detail_rules_web_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <WebView
                android:id="@+id/event_detail_rules_web_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <WebView
                android:id="@+id/event_detail_rules_web_view_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>
